<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
    <defName>ISA_Farsighted</defName>
    <label>farsighted</label>
    <iconPath>UI/Icons/Genes/Gene_Nearsighted</iconPath>
    <description>Carriers of this gene see better at a distance. Their shooting accuracy at long ranges is increased.</description>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>50</displayOrderInCategory>
    <statFactors>
      <ShootingAccuracyFactor_Long>1.25</ShootingAccuracyFactor_Long>
      <ShootingAccuracyFactor_Medium>1.15</ShootingAccuracyFactor_Medium>
    </statFactors>
    <biostatMet>-2</biostatMet>
    <exclusionTags>
      <li>ShootingAccuracy</li>
    </exclusionTags>
  </GeneDef>

  <GeneDef>
    <defName>ISA_Beak</defName>
    <label>beak</label>
    <iconPath>UI/Icons/Genes/Gene_jaw</iconPath>
    <description>Carriers of this gene have a beak instead of a human jaw. Their eating speed is increased since they swallow without chewing.</description>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>50</displayOrderInCategory>
    <statFactors>
      <EatingSpeed>1.25</EatingSpeed>
    </statFactors>
    <biostatMet>-1</biostatMet>
  </GeneDef>  


  <GeneDef>
    <defName>ISA_wings</defName>
    <label>wings</label>
    <iconPath>UI/Icons/Genes/Gene_jaw</iconPath>
    <description>Carriers of this gene have large leathery wings slowing them down.</description>
    <displayCategory>Miscellaneous</displayCategory>
    <displayOrderInCategory>50</displayOrderInCategory>
    <statFactors>
      <MoveSpeed>-0.1</MoveSpeed>
    </statFactors>
    <biostatMet>-1</biostatMet>
  </GeneDef>  
</Defs>
