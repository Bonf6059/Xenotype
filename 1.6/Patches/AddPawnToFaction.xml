<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<ISA_Myotragus>0.06</ISA_Myotragus>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/FactionDef[@Name="PirateBandBase"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<ISA_Myotragus>0.02</ISA_Myotragus>
		</value>
	</Operation>

<!-- Checks if xenotypeSet exists in the tribe faction base, if not it gets added -->
	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/FactionDef[@Name="TribeBase"]/xenotypeSet</xpath>
			<nomatch Class="PatchOperationAdd">
				<xpath>/Defs/FactionDef[@Name="TribeBase"]</xpath>
					<value>
						<xenotypeSet />
					</value>
			</nomatch>
	</Operation>
<!-- Checks if xenotypeChances exists in the tribe faction base, if not it gets added -->
	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/FactionDef[@Name="TribeBase"]/xenotypeSet/xenotypeChances</xpath>
			<nomatch Class="PatchOperationAdd">
				<xpath>/Defs/FactionDef[@Name="TribeBase"]/xenotypeSet</xpath>
					<value>
						<xenotypeChances />
					</value>
			</nomatch>
	</Operation>
<!-- It adds Myotragus to the tribeBase faction (which means every faction that uses this as a ParentName) -->
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/FactionDef[@Name="TribeBase"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<ISA_Myotragus>0.08</ISA_Myotragus>
		</value>
	</Operation>

</Patch>
