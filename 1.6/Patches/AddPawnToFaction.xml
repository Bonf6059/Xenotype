<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/FactionDef[@Name="OutlanderFactionBase"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<ISA_Myotragus>0.06</ISA_Myotragus> <!-- Da portare a 0.04 se si aggiunge lo xeno ai tribe -->
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/FactionDef[@Name="PirateBandBase"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<ISA_Myotragus>0.02</ISA_Myotragus>
		</value>
	</Operation>

<!-- Per i tribe bisogna fare una patch in cui viene aggiunta tutta la cat. dello xenotype perchÃ¨ nel base non esiste oppure fare una faction nuova -->
	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/FactionDef[@Name="TribeBase"]</xpath>
		<value>
			<xenotypeSet>
				<xenotypeChances>
					<ISA_Myotragus>0.08</ISA_Myotragus>
				</xenotypeChances>
			</xenotypeSet>
		</value>
	</Operation>

</Patch>
